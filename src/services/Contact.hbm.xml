<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entities">

  <class name="Contact" table ="CONTACT">
  	 <id name="id" type="long" column="idContact" >
   		<generator class="increment"/>
  	 </id>
  	 
  	 <version name="version" access="field" column="VERSION"/>
  	 
	 <property name="firstName">
	 	<column name="FIRSTNAME"/>
	 </property>
	 
	 <property name="lastName">
	 <column name="LASTNAME"/>
	 </property>
	 <property name="email">
	 	<column name="EMAIL"/>
	 </property>

	 <!-- plusieurs contact peuvent avoir la même adresse -->
	 <many-to-one name="address" column="address" class="Address" not-null="false" optimistic-lock="false" cascade="all"/>
	
	<!-- un contact peut avoir plusieur phone-->
	<set name="phoneNumbers" cascade="persist" inverse="true"
	table="PHONENUMBER"   batch-size="10" lazy="true">
		<key>
			<column name="idContact" not-null="false"/>
		</key>
		
		<one-to-many class="PhoneNumber"/>
	</set>
	 
	
    
    <!--un contact peut être dans plusieurs group -->
    
    <set name="group" table="GROUPE" cascade="all" lazy="true">
    	<key column="idContact"/>
    	<many-to-many class="ContactGroup" column="idContactGroup"/>
    </set>
    
    <!-- HERITAGE -->
    <joined-subclass name="Entreprise" table="ENTREPRISE">
    	<key column="id"/>
    	<property name= "NumSiret" column="NumSiret" />
    </joined-subclass>
  </class>
  
</hibernate-mapping>

